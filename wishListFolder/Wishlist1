import java.util.Scanner;
//wishlist array//
public class Wishlist1 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Set the maximum number of trains
        final int MAX_Books = 5;
        String[] trains = new String[MAX_Books];
        int BookCount = 0;

        while (BookCount < MAX_BOOKS) {
            System.out.print("Enter Book name to add on to wishlist: ");
            String BookName = scanner.nextLine();

            if (BookName.equalsIgnoreCase("exit")) {
                break;
            }

            Books[BookCount] = BookName;
            BookCount++;
        }

        // Display the trains added to the array
        System.out.println("\nBooks in the array:");
        for (int i = 0; i < BookCount; i++) {
            System.out.println((i + 1) + ". " + books[i]);
        }

        scanner.close();
    }
}
